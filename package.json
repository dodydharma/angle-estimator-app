{
  "name": "angle-estimator",
  "productName": "Angle Estimator",
  "version": "0.0.1",
  "description": "The best app ever",
  "main": "index.js",
  "license": "MIT",
  "repository": "dodydharma/angle-estimator-app",
  "author": {
    "name": "Dody Dharma",
    "email": "dody.dharma@gmail.com",
    "url": "https://dodydharma.com"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "xo",
    "test": "npm run lint",
    "start": "electron-forge start",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --macos --linux --windows",
    "release": "np",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "electron-context-menu": "^3.4.0",
    "electron-debug": "^3.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "electron-unhandled": "^4.0.1",
    "electron-updater": "^5.2.1",
    "electron-util": "^0.17.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^30.0.6",
    "electron-winstaller": "^5.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-unicorn": "^53.0.0",
    "np": "^10.0.5",
    "xo": "^0.51.0"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "unicorn/prefer-module": "off"
    }
  },
  "np": {
    "publish": false,
    "releaseDraft": false
  },
  "build": {
    "appId": "com.dodydharma.angle-estimator-app",
    "mac": {
      "category": "public.app-category.utilities",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Chat"
    }
  }
}
